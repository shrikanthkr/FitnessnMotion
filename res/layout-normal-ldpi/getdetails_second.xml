<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/headnew1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/topbar" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/title"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:textStyle="bold"
            android:typeface="sans" />
    </RelativeLayout>

    


    <TextView
        android:id="@+id/textView_enterGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative1"
        android:layout_marginTop="60dp"
        android:layout_toLeftOf="@+id/button_Seconddone"
        android:layout_marginLeft="10dp"
        android:text="Enter Gender"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold"
        android:typeface="sans" />

    <Spinner
        android:id="@+id/spinner_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_Seconddone"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/textView_mode"
        android:layout_alignBottom="@+id/textView_mode"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
         />

    <Spinner
        android:id="@+id/spinner_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_enterGender"
        android:layout_alignBottom="@+id/textView_enterGender"
        android:layout_alignLeft="@+id/spinner_mode"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/textView_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_enterGender"
        android:layout_below="@+id/spinner_gender"
        android:layout_marginTop="80dp"
        android:text="Enter Mode"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold"
        android:typeface="sans" />
    
    <Button
        android:id="@+id/button_Seconddone"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@+id/textView_mode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/tick_icon"
         />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_Seconddone"
        android:layout_centerHorizontal="true"
        android:text="done"
        android:textColor="#000000"
        android:textSize="16dp" />

</RelativeLayout>