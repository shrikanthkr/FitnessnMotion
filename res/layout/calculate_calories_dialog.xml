<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
     >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="40dp"
        android:text="Calories Burned:"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="0 cal" />

    <Button
        android:id="@+id/button_addentry"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/addiconcustom" />

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignBaseline="@+id/button_addentry"
        android:layout_alignBottom="@+id/button_addentry"
        android:layout_toRightOf="@+id/textView1"
        android:background="@drawable/xiconcustom" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_addentry"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_addentry"
        android:layout_below="@+id/button_addentry"
        android:textColor="#000000"
        android:textSize="14dp"
        android:textStyle="bold"
        android:text="Add Entry" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/button_cancel"
        android:layout_marginLeft="3dp"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text="cancel" />

</RelativeLayout>