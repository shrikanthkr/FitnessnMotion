<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView_exerciselabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relative1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="Sport Name:"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_sports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_exerciselabel"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/textView_exerciselabel"
        android:text="Boxing"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="normal" />

    <Spinner
        android:id="@+id/spinner_duration"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_exerciselabel"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinner_duration"
        android:layout_below="@+id/button_calculate"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:text="Calories Burned:"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:text="0 cal"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_addEntry"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/addiconcustom" />

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignBaseline="@+id/button_addEntry"
        android:layout_alignBottom="@+id/button_addEntry"
        android:layout_alignRight="@+id/textView_calories"
        android:layout_marginRight="30dp"
        android:background="@drawable/xiconcustom" />

    <Button
        android:id="@+id/button_calculate"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_below="@+id/spinner_duration"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/tickiconcustom" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_exerciselabel"
        android:layout_below="@+id/textView_exerciselabel"
        android:layout_marginTop="10dp"
        android:text="Duration"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_calculate"
        android:layout_centerHorizontal="true"
        android:text="Calculate"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_addEntry"
        android:layout_toLeftOf="@+id/textView6"
        android:text="add"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/button_cancel"
        android:layout_marginLeft="5dp"
        android:text="cancel"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold" />

</RelativeLayout>